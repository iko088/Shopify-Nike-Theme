<section class="in-view-animation">
  <div class="more-info">
    <div class="more-info-wrapper">
      {%- if section.settings.text != blank -%}
        <h1>THE RESOLUTIONS STARTER PACK</h1>
      {%- else -%}
        <h1>{{ block.settings.text | escape }}</h1>
      {%- endif -%}

      {%- if section.settings.text2 != blank -%}
        <p>
          Go for all your fitness goals with a curated collection of new kicks breathable apparel, and more supportive   
        styles
        </p>
      {%- else -%}
        <p>
          {{ block.settings.text2 | escape }}
        </p>
      {%- endif -%}

      <button>
        <a href="/collections">Shop</a>
      </button>
    </div>
  </div>
</section>

<style>
  .more-info {
    position: relative;
    background: {{ section.settings.background }};
    color: {{ section.settings.text_color }};
    display: flex;
    justify-content: center;
  }

  .more-info::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('{{ 'shoebg.png' | asset_url }}');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    background-color: transparent;
    opacity: 0.3;
    transition: 0.7s ease;
    /* Set the transparency level for the background image */
    /* z-index: -1; */
    /* Ensure the background image stays behind the content */
  }

  .more-info:hover::before {
    transform: translateY(-20px);
    /* Rotates the background image on hover */
  }

  .more-info-wrapper {
    display: flex;
    flex-direction: column;
    width: 500px;
    justify-content: center;
    align-items: center;
    margin: 50px 0 30px;
    padding: 0;
    text-align: center;
  }

  .more-info-wrapper h1 {
    font-size: 50px;
    margin: 0;
  }

  .more-info-wrapper p {
    font-size: 1em;
  }

  .more-info-wrapper button {
    padding: 10px 20px;
    background-color: black;
    border: none;
    color: white;
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    z-index: 999;
  }
  .more-info-wrapper button a {
    text-decoration: none;
    color: white;
  }

  .more-info-wrapper button:hover {
    background-color: rgb(185, 185, 185);
    transition: all 0.3s ease-in-out;

  }

  @media (max-width: 600px) {
    .more-info-wrapper {
      padding: 0 10px;
    }
    .more-info-wrapper h1 {
      font-size: 33px;
    }
    .more-info-wrapper p {
      font-size: 0.8em;
    }
    .more-info-wrapper button {
      padding: 8px 20px;
    }
  }
</style>
{% schema %}
  {
    "name": "More-info",
    "settings": [
      {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#F4F4F4"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text",
        "default": "#000000"
      }, {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "default text"
      }, {
        "type": "text",
        "id": "text2",
        "label": "Text2",
        "default": "default text"
      }
    ],
    "presets": [
      {
        "name": "more-info"
      }
    ]
  }
{% endschema %}