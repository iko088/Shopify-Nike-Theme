<section class="in-view-animation">
  <div class="three-images-wrapper">
    {%- if section.settings.image != blank -%}
      <div class="one-user">
        <h1></h1>
      </div>
    {%- else -%}
      <div class="one">
        <h1></h1>
      </div>
    {%- endif -%}
    {%- if section.settings.image2 != blank -%}
      <div class="two-user">
        <h1></h1>
      </div>
    {%- else -%}
      <div class="two">
        <h1></h1>
      </div>
    {%- endif -%}
    {%- if section.settings.image3 != blank -%}
      <div class="three-user">
        <h1></h1>
      </div>
    {%- else -%}
      <div class="three">
        <h1></h1>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .three-images-wrapper {
    display: flex;
  }

  .one {
    background-image: url("{{ 'one.png' | asset_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }
  .one-user {
    background-image: url("{{ section.settings.image | image_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }
  .two {
    background-image: url("{{ 'two.png' | asset_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }
  .two-user {
    background-image: url("{{ section.settings.image2 | image_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }
  .three {
    background-image: url("{{ 'three.png' | asset_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }
  .three-user {
    background-image: url("{{ section.settings.image3 | image_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }

  /* Media Quries for other screens  */
  @media (max-width: 600px) {
    .three-images-wrapper {
      display: grid;
      grid-template-columns: 2;
      gap: 5px;
    }
    .one {
    grid-column: span 1;
    height: 300px;
    width: 100%;
    object-fit: contain;
  }
  .one-user {
    grid-column: span 1;
    height: 300px;
    width: 100%;
    object-fit: contain;
  }
  .two {
    grid-column: span 1;
    height: 300px;
    width: 100%;
  }
  .two-user {
    grid-column: span 1;
    height: 300px;
    width: 100%;
  }
  .three {
    grid-column: span 2;
    height: 290px;
    width: 100%;
  }
  .three-user {
    grid-column: span 2;
    height: 290px;
    width: 100%;
  }
  }
</style>

